{
  "compilerOptions": {
    "alwaysStrict": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": ["dist", "node_modules", "**/__tests__/**"],
  "include": ["index.d.ts", "src"]
}
